<h3>Категории</h3>

<p><%= link_to 'Добавить категорию', new_admin_category_path %></p>

<table class="table table-striped table-hover">
    <tr>
      <th>ID</th>
      <th>Название</th>
      <th colspan="2">Действия</th>
    </tr>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td>
          <%= link_to 'Редактировать', edit_admin_category_path(category.id) %>
          <%= link_to 'Удалить', admin_category_path(category.id), class: "archive", data: {
                                                                           turbo_method: 'delete',
                                                                           turbo_confirm: 'Вы уверены'
                                                                         },
                                                                   remote: true %>
        </td>
      </tr>
    <% end %>
</table>
