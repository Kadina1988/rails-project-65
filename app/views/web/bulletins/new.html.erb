<h3>Add bulletin</h3>

<%= form_with model: @bulletin do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name%>
  </p>

  <p>
    <%= f.file_field :image, data: { max_file_size: 5.megabytes} %>
  </p>
  <p><%= f.submit %></p>
<% end %>
